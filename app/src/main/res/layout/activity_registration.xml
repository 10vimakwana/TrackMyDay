<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/commonbg"
    tools:context=".activity.LoginActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="180dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:src="@drawable/logo" />


            <com.project.trackmydayapp.fonthelper.FontEditText
                android:id="@+id/ed_reg_email"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/bg"
                android:drawableLeft="@drawable/ic_email"
                android:drawablePadding="15dp"
                android:ellipsize="end"
                android:hint="Enter Email"
                android:paddingLeft="16dp"
                android:singleLine="true"
                android:textSize="14sp" />

            <com.project.trackmydayapp.fonthelper.FontEditText
                android:id="@+id/ed_reg_pass"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/bg"
                android:drawableLeft="@drawable/ic_password"
                android:drawablePadding="15dp"
                android:ellipsize="end"
                android:hint="Enter Password"
                android:inputType="textPassword"
                android:paddingLeft="16dp"
                android:singleLine="true"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/ed_reg_repass"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/bg"
                android:drawableLeft="@drawable/ic_password"
                android:drawablePadding="15dp"
                android:ellipsize="end"
                android:hint="Enter Re-Password"
                android:inputType="textPassword"
                android:paddingLeft="16dp"
                android:singleLine="true"
                android:textSize="14sp" />

            <com.project.trackmydayapp.fonthelper.RobotoTextViewBold
                android:id="@+id/btn_reg"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/btn_bg"
                android:gravity="center"
                android:letterSpacing="0.05"
                android:text="Sign up"
                android:textColor="@color/white"
                android:textSize="16sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="16dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <com.project.trackmydayapp.fonthelper.RobotoTextViewBold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:letterSpacing="0.05"
                    android:text="Already have an Account?"
                    android:textColor="@color/purple_500"
                    android:textSize="16sp"
                    android:textStyle="bold" />
                <com.project.trackmydayapp.fonthelper.RobotoTextViewBold
                    android:id="@+id/txt_already_reg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:letterSpacing="0.05"
                    android:text="Sign in now"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/purple_700"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</RelativeLayout>